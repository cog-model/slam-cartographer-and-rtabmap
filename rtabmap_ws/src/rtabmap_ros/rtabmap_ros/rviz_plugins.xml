<library path="lib/librtabmap_rviz_plugins">
  <class name="rtabmap_ros/MapCloud"
         type="rtabmap_ros::MapCloudDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays graph point clouds from rtabmap_ros_msgs/MapData messages.
    </description>
    <message_type>rtabmap_ros_msgs/MapData</message_type>
  </class>
  <class name="rtabmap_ros_msgs/MapGraph"
         type="rtabmap_ros::MapGraphDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays graphs from rtabmap_ros_msgs/MapGraph messages.
    </description>
    <message_type>rtabmap_ros_msgs/MapGraph</message_type>
  </class>
  <class name="rtabmap_ros_msgs/Info"
         type="rtabmap_ros::InfoDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays information from rtabmap_ros_msgs/Info messages.
    </description>
    <message_type>rtabmap_ros_msgs/Info</message_type>
  </class>
  <class name="rtabmap_ros/OrbitOriented"
         type="rtabmap_ros::OrbitOrientedViewController"
         base_class_type="rviz::ViewController">
    <description>
      Camera orbit with orientation.
    </description>
  </class>
</library>
